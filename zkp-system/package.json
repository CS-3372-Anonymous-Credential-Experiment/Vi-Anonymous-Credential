{
  "name": "eth-zkp-system",
  "version": "1.0.0",
  "description": "ZKP and Smart Contract system using zk-SNARKs with BLS12-381",
  "main": "index.js",
  "scripts": {
    "compile": "circom circuits/main.circom --r1cs --wasm --sym --c",
    "setup": "snarkjs groth16 setup circuits/main.r1cs pot12_final.ptau circuits/main_0000.zkey",
    "contribute": "snarkjs zkey contribute circuits/main_0000.zkey circuits/main_final.zkey",
    "export-verifier": "snarkjs zkey export verificationkey circuits/main_final.zkey circuits/verification_key.json",
    "generate-proof": "node scripts/generate-proof.js",
    "verify-proof": "node scripts/verify-proof.js",
    "deploy-contract": "node scripts/deploy-contract.js",
    "test": "mocha test/**/*.test.js",
    "test:ielts": "mocha test/ielts-automation.test.js",
    "lambda-build": "webpack --config webpack.lambda.config.js",
    "start-api": "pm2 start api/server.js --name zkp-api",
    "start-ielts-api": "pm2 start api/ielts-credential-api.js --name zkp-ielts-api",
    "start-simple-api": "pm2 start api/simple-server.js --name zkp-simple-api",
    "start-simple-ielts-api": "pm2 start api/simple-ielts-api.js --name zkp-simple-ielts-api",
    "dev": "nodemon api/server.js",
    "dev:ielts": "nodemon api/ielts-credential-api.js",
    "setup-circuit": "node scripts/setup-circuit.js",
    "setup-ielts-circuit": "node scripts/setup-ielts-circuit.js",
    "setup-simple": "node scripts/simple-setup.js",
    "run-ielts-automation": "node examples/ielts-automation-example.js"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "bcryptjs": "^2.4.3",
    "circom": "^0.5.46",
    "circomlib": "^2.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "ffjavascript": "^0.2.29",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "snarkjs": "^0.7.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "chai": "^4.3.10",
    "hardhat": "^2.26.3",
    "hardhat-circom": "^3.3.2",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "zkp",
    "zk-snark",
    "bls12-381",
    "ethereum",
    "smart-contracts",
    "lambda"
  ],
  "author": "ZKP System",
  "license": "MIT"
}
